<PageFunction
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    x:Class="Cargo.UI.AddViews.AddCompanyPage"
    x:TypeArguments="sys:String"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cargo.UI.AddViews"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300"
    Title="AddCompanyPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Label Content="Title" Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap"
                VerticalAlignment="Center" Grid.Row="0"  Grid.Column="1" Margin="15,0,15,0"
                     Text="{Binding Path=Title, Mode=OneWayToSource}"/>


        <Label Content="Tax Number" Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap"
                VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="15,0,15,0"
                     Text="{Binding Path=TaxNumber, Mode=OneWayToSource}"/>

        <Label Content="Email" Grid.Row="2" Grid.Column="0"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap"
                VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="15,0,15,0"
                     Text="{Binding Path=Email, Mode=OneWayToSource}"/>

        <Label Content="Phone" Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox HorizontalAlignment="Stretch" Height="23" TextWrapping="Wrap"
                VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Margin="15,0,15,0"
                     Text="{Binding Path=Phone, Mode=OneWayToSource}"/>
        
        <Label Content="Company Type" Grid.Row="4" Grid.Column="0"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox x:Name="m_comboBoxType" HorizontalAlignment="Stretch" Height="23"
                VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Margin="15,0,15,0"
                     Text="{Binding Path=CompanyType, Mode=OneWayToSource}"/>

        <Separator Grid.Row="4" Grid.ColumnSpan="2" VerticalAlignment="Bottom"/>

        <Button Content="Cancel" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center" 
                Click="CancelButton_Click" Margin="15,0,15,0"/>
        <Button Content="Next" Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" 
                 Margin="15,15" MaxWidth="120" Click="NextButton_Click"/>
    </Grid>
</PageFunction>
